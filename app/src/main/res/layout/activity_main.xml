<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/txtSpinnerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action: "
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Spinner
            android:id="@+id/spnMathTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtSpinnerTitle"
            android:layout_centerVertical="true"
            />

        <Button
            android:id="@+id/btnOpenMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math menu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edtIntegerInput1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtIntegerInput2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txtMathResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Result yet!"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"/>

</LinearLayout>